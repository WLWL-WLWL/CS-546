<main>
    <div class="single">
        <h1>{{characters.name}}</h1>
        <img alt={{characters.name}} src={{characters.thumbnail.path}}/portrait_xlarge.jpg>
        <p>{{characters.description}}</p>
        <h2>Comics</h2>
        <ul>
            {{#each characters.comics.items}}
            <li>{{this.name}}</li>
            {{/each}}
        </ul>
    </div>
</main>